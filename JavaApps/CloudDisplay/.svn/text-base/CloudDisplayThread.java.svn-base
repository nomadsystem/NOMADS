import java.net.*;
import java.io.*;
import nomads.technosonics.*;

public class CloudDisplayThread extends Thread
{  private Socket           		socket   = null;
    private CloudDisplay         	client   = null;
    private DataInputStream  		streamIn = null;

    public CloudDisplayThread(CloudDisplay _client, Socket _socket)
    {  client   = _client;
	socket   = _socket;
	open();  
	start();
    }
    public void open()
    {  try
	    {  streamIn  = new DataInputStream(socket.getInputStream());
	    }
	catch(IOException ioe)
	    {
	    if (globals.clientDebugLevel > 0) {
				System.out.println("...");
			}  
	    System.out.println("Error getting input stream: " + ioe);
		client.stop();
	    }
    }
    public void close()
    {  try
	    {  if (streamIn != null) streamIn.close();
	    }
	catch(IOException ioe)
	    {  
	    if (globals.clientDebugLevel > 0) {
			System.out.println("...");
			}
	    System.out.println("Error closing input stream: " + ioe);
	    }
    }
    public void run()
    {  while (true)
	    {  try
		    {  
	        client.handle(streamIn.readByte(), streamIn.readUTF());
		    }
		catch(IOException ioe)
		    {  
		    if (globals.clientDebugLevel > 0) {
				System.out.println("...");
				}
		    System.out.println("Listening error: " + ioe.getMessage());
			client.stop();
		    }
	    }
    }
}
